{
  "npm": true,
  "lint": {
    "rules": [
      "polymer-3"
    ]
  },
  "builds": [{
    "js": {"minify": true, "compile": true},
    "css": {"minify": true},
    "html": {"minify": true},
    "bundle": false,
    "addServiceWorker": true,
    "addPushManifest": true
  }],
  "sources": [
    "images/**/*"
  ],
  "extraDependencies": [
    "node_modules/@webcomponents/webcomponentsjs/*.js",
    "node_modules/@webcomponents/webcomponentsjs/bundles/*.js",
    "manifest.json"
  ]
}
